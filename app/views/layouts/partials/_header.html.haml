      %i.sidebar.icon

    = link_to('ЛОГОТИП', root_path, class: 'item')

    .ui.pointing.dropdown.link.item.vanishing
      %span.text Категории
      %i.dropdown.icon
      .menu
        .ui.icon.search.input
          %i.search.icon
          %input{placeholder: 'Поиск категорий', type: :text}
