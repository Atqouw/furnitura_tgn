.ui.middle.aligned.center.aligned.grid
  .column.maxwidth
    %h2.ui.teal.image.header
      .content
        Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .ui.stacked.segment
        .ui.form
          .field
            -#= f.label :email
            -#%br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'E-mail address'
          .field
            -#= f.label :password
            -#- if @minimum_password_length
            -#  %em
            -#    (#{@minimum_password_length} characters minimum)
            -#%br/
            = f.password_field :password, autocomplete: "new-password", placeholder:'Password (6 characters minimum)'
          .field
            -#= f.label :password_confirmation
            -#%br/
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder:'Password confirmation'
          = f.submit 'Sign up', class: 'ui fluid large teal submit button'
    .ui.message
      = render "devise/shared/links"